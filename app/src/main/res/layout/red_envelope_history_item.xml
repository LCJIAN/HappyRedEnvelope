<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_red_envelop_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tv_red_envelop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorTextBlack"
        android:layout_toEndOf="@+id/iv_red_envelop_avatar"
        style="@style/TextAppearance.AppTheme.Small"
        android:layout_toRightOf="@+id/iv_red_envelop_avatar"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_red_envelop_time"
        android:layout_width="wrap_content"
        android:textColor="@color/colorTextLightGray"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_red_envelop_avatar"
        android:layout_alignLeft="@id/tv_red_envelop_title"
        android:layout_alignStart="@id/tv_red_envelop_title"
        style="@style/TextAppearance.AppTheme.Micro"
        android:text="TextView" />

    <TextView
        android:id="@+id/iv_red_envelop_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlack"
        style="@style/TextAppearance.AppTheme.Medium"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="TextView" />

</RelativeLayout>