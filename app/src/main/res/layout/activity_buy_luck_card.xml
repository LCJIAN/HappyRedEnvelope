<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.BuyLuckCardActivity">

    <include layout="@layout/navigation_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <com.lcjian.lib.widget.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ratio="1.1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/chb_quarter_luck_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_luck_card"
                            android:button="@null" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="@string/quarter_luck_card"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/yuan_5"
                            android:textColor="@color/colorDarkRed"
                            android:textStyle="bold" />
                    </FrameLayout>
                </com.lcjian.lib.widget.RatioLayout>

                <com.lcjian.lib.widget.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ratio="1.1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/chb_half_an_hour_luck_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_luck_card"
                            android:button="@null" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="@string/half_an_hour_luck_card"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/yuan_9"
                            android:textColor="@color/colorDarkRed"
                            android:textStyle="bold" />
                    </FrameLayout>
                </com.lcjian.lib.widget.RatioLayout>

                <com.lcjian.lib.widget.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ratio="1.1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/chb_one_hour_luck_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_luck_card"
                            android:button="@null" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="@string/one_hour_luck_card"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/yuan_16"
                            android:textColor="@color/colorDarkRed"
                            android:textStyle="bold" />
                    </FrameLayout>
                </com.lcjian.lib.widget.RatioLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <com.lcjian.lib.widget.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ratio="1.1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/chb_two_hours_luck_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_luck_card"
                            android:button="@null" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="@string/two_hours_luck_card"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/yuan_25"
                            android:textColor="@color/colorDarkRed"
                            android:textStyle="bold" />
                    </FrameLayout>
                </com.lcjian.lib.widget.RatioLayout>

                <com.lcjian.lib.widget.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ratio="1.1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/chb_day_luck_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_luck_card"
                            android:button="@null" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="@string/day_luck_card"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.AppTheme.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/yuan_50"
                            android:textColor="@color/colorDarkRed"
                            android:textStyle="bold" />
                    </FrameLayout>
                </com.lcjian.lib.widget.RatioLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_decrease"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

                <TextView
                    android:id="@+id/tv_buy_luck_card_count"
                    style="@style/TextAppearance.AppTheme.Small"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:textColor="@color/colorTextBlack" />

                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_increase"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

                <TextView
                    style="@style/TextAppearance.AppTheme.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luck_card_unit"
                    android:textColor="@color/colorTextBlack" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_total_price"
                    style="@style/TextAppearance.AppTheme.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDivider"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp">

                <Button
                    android:id="@+id/btn_buy_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_button_big_bg"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="@string/buy_now"
                    android:textColor="@android:color/white" />

                <TextView
                    style="@style/TextAppearance.AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/buy_luck_card_tip"
                    android:textColor="@color/colorTextBlack" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>