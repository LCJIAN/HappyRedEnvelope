<?xml version="1.0" encoding="utf-8"?>
<com.lcjian.lib.widget.RatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ratio="1.1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/chb_luck_card_combo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_luck_card"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_luck_card_combo_time"
            style="@style/TextAppearance.AppTheme.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_luck_card_combo_price"
            style="@style/TextAppearance.AppTheme.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/colorDarkRed"
            android:textStyle="bold" />
    </FrameLayout>
</com.lcjian.lib.widget.RatioLayout>