<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_video_thumbnail"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/iv_video_title"
        style="@style/TextAppearance.AppTheme.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_video_thumbnail"
        android:layout_toEndOf="@id/iv_video_thumbnail"
        android:layout_toRightOf="@id/iv_video_thumbnail"
        android:textColor="@color/colorTextBlack" />
</RelativeLayout>