<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.withdrawal.CopyTokenDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextAppearance.AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/withdrawal_token"
            android:textColor="@color/colorTextBlack" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_withdrawal_token"
        style="@style/TextAppearance.AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_copy_token_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTextBlack" />

    <Button
        android:id="@+id/btn_copy_token"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/shape_button_medium_bg"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/one_key_copy"
        android:textColor="@android:color/white" />
</LinearLayout>