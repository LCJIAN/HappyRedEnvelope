<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="4dp">

    <com.lcjian.lib.widget.RatioLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fixedSide="width"
        app:ratio="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_goods_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_goods_name"
                style="@style/TextAppearance.AppTheme.Micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/twenty_percent_transparency_black"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="4dp"
                android:textColor="@android:color/white" />
        </FrameLayout>
    </com.lcjian.lib.widget.RatioLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_goods_price"
            style="@style/TextAppearance.AppTheme.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_goods_sale_count"
            style="@style/TextAppearance.AppTheme.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray" />
    </LinearLayout>

</LinearLayout>