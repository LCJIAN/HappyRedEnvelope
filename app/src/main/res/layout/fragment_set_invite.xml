<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.withdrawal.CopyTokenDialogFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/invite_you"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="@color/colorTextBlack" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTextBlack"
        app:srcCompat="@drawable/luck_card_invite" />

    <EditText
        android:id="@+id/et_invite_id"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:background="@drawable/shape_input_bg"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="@color/colorTextBlack" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/shape_button_medium_bg"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="@string/confirm"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_skip"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_button_medium_green_bg"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/skip"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>