<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.ExploreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_top_navigation_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/explore"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lcjian.lib.viewpager.AutoViewPager
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_explore_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/explore_one"
                android:textAppearance="@style/TextAppearance.AppTheme"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_explore_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/explore_two"
                android:textAppearance="@style/TextAppearance.AppTheme"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_explore_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/explore_three"
                android:textAppearance="@style/TextAppearance.AppTheme"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_explore_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/explore_four"
                android:textAppearance="@style/TextAppearance.AppTheme"
                android:textColor="@color/colorTextBlack" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>